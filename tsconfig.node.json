{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "types": ["node"],
    "paths": {
      "common/*": ["packages/common/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["packages/common/generated/*"]
}