{
  "name": "subgraphs",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "Camelot Master Subgraph Monorepo",
  "main": "index.js",
  "scripts": {
    "deploy-all-dev": "pnpm --filter common run get-chain-config-dev && ts-node-esm -P tsconfig.node.json deployAll.ts",
    "deploy-all-prod": "pnpm --filter common run get-chain-config-prod && ts-node-esm -P tsconfig.node.json deployAll.ts",

    "get-config-common-dev": "pnpm --filter common run get-chain-config-dev",
    "get-config-common-prod": "pnpm --filter common run get-chain-config-dev",

    "set-config-ammv2": "pnpm --filter ammv2 run set-config",
    "set-config-ammv3": "pnpm --filter ammv3 run set-config",
    "set-config-blocks": "pnpm --filter blocks run set-config",
    "set-config-incentives": "pnpm --filter incentives run set-config",

    "codegen-ammv2": "pnpm --filter amm-v2 run codegen",
    "codegen-ammv3": "pnpm --filter ammV3 run codegen",
    "codegen-blocks": "pnpm --filter blocks run codegen",
    "codegen-incentives": "pnpm --filter incentives run codegen",

    "build-ammv2": "pnpm --filter ammV2 run build",
    "build-ammv3": "pnpm --filter ammV3 run build",
    "build-blocks": "pnpm --filter blocks run build",
    "build-incentives": "pnpm --filter incentives run build",

    "deploy-ammv2": "pnpm --filter ammV2 run deploy",
    "deploy-ammv3": "pnpm --filter ammV3 run deploy",
    "deploy-blocks": "pnpm --filter blocks run deploy",
    "deploy-incentives": "pnpm --filter incentives run deploy"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.69.1",
    "@graphprotocol/graph-ts": "0.31.0",
    "@types/js-yaml": "^4.0.9",
    "js-yaml": "^4.1.0",
    "typescript": "^5.4.2",
    "ts-node": "10.9.2"
  },
  "devDependencies": {
    "matchstick-as": "0.5.0",
    "command-line-args": "^5.2.1",
    "command-line-usage": "^7.0.1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
